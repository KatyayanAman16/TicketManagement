@model TicketManagementSystem.Models.Login

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-sm-6 offset-sm-3 myborder mt-2">
            <h2 class="myheading text-center myborder"> LOGIN FORM </h2>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label"></label>
                            <div class="col-md-10">
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <div class="col-md-10">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10 text-center">
                                <input type="submit" value="Login" class="btn btn-success" />
                                <p>Don't have an Account? <a asp-controller="Account" asp-action="Register" class="btn btn-danger">Register</a></p>
                                <p>Forgot Password? <a asp-controller="Account" asp-action="ForgotPassword" class="btn btn-danger">Reset</a></p>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
